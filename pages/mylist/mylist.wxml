<scroll-view scroll-y='true' class='sv-item'>
  <!-- 寻物启事 -->
  <block wx:for='{{result}}' wx:key='' wx:for-item='item'>
    <view class='svv-item' data-id='{{item.id}}' bindtap='querydetail'>
      <view class='svv-img'>
        <image mode='aspectFill' src='{{item.imgsrc}}'></image>
      </view>
      <view class='svv-info'>
        <!-- 标题 -->
        <view class='svv-title'>{{item.title}}</view>
        <!-- 分类 -->
        <view class='common'>
          <text class='svv-category'>{{item.category}}</text> {{item.time}}
        </view>
        <!-- 地区 -->
        <view class='common'>
          地区: {{item.address}}
        </view>
        <!-- 详情 -->
        <view class='svv-detail common'>
          详情: {{item.detail}}
        </view>
      </view>
    </view>
  </block>
</scroll-view>