.content{
  /* 弹性盒子布局 */
  display: flex;
  /* 垂直排列 */
  flex-direction: column;
  /* 不换行 */
  flex-wrap: nowrap;
  /* 居中显示 */
  align-items: center;
}
.content>text{
  font-size: 50rpx;
  color: #1ECEFA;
  display: block;
  padding-top: 300rpx;
}
.content>button{
  display: block;
  width: 400rpx;
  border-radius: 20rpx;
  background-color: #1ECEFA;
  color: white;
  margin-top: 300rpx;
}