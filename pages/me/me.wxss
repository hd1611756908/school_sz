/* 我的样式设置 */
page{
  /* 背景色 */
  background-color: #eee;
}
/* 我的用户信息样式 */
.user{
  /* 弹性盒子模型 */
  display: flex;
  /* 沿着水平方向 */
  flex-direction: row;
  /* 不换行 */
  flex-wrap: nowrap;
  /* 主轴上的对齐方式 */
  justify-content: space-between;
  /* 垂直居中 */
  align-items: center;
  /* 宽度 */
  width: 100%;
  /* 背景色 */
  background-color: white;
}
/* 头像 */
.user-avatar{
  width: 25%;
  padding: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
/* 头像图片 */
.user-avatar>image{
  /* 宽度 */
  width: 170rpx;
  /* 高度 */
  height: 170rpx;
  border-radius: 20rpx;
}
/* 用户信息整体样式 */
.user-info{
  width: 75%;
  /* 弹性盒子布局 */
  display: flex;
  /* 列布局 */
  flex-direction: column;
  /* 不换行 */
  flex-wrap: nowrap;
  /* 字体 */
  font-size: 35rpx;
  /* 字体样式 */
  font-family: '微软雅黑';

}
/* 用户信息排列 */
.user-info>view{
  padding: 10rpx 0 10rpx 10rpx;
}
/* 性别字体颜色 */
.user-gender{
  color: #c0c0c0;
}

/* 我的启示，我的收藏，权限控制，联系客服 */
.me-comm{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  margin-top: 20rpx;
  font-size: 30rpx;
  background-color: white;
  padding: 10rpx 0;
}

.me-comm>image{
  padding-left: 30rpx;
  padding-right: 10rpx;
  width: 60rpx;
  height: 60rpx;
}